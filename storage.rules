rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /user_photos/{userId}/{allPaths=**} {
      // Herkes resimleri görebilir
      allow read: if true;
      
      // Sadece profil sahibi kendi klasörüne resim yükleyebilir
      // Resim boyutu 5MB'dan küçük olmalı ve sadece image tipi olmalı
      allow write: if request.auth != null && 
                   request.auth.uid == userId &&
                   request.resource.size < 5 * 1024 * 1024 &&
                   request.resource.contentType.matches('image/.*');
    }
    
    // Diğer tüm yollar kapalı
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
